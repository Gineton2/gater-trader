<div id="post-{{post_id}}" class="card text-center mw-xl-15 mw-md-20 mw-sm-25 m-auto my-2">
    <img class="card-image bg-grey w-100" src={{post_thumbnail}} alt="Missing Image">
    <div class="card-body bg-grey w-100">
        <p class="card-title w-100">{{title}}</p>
        <p clas="card-text w-100">{{post_description}}</p>
        <p class="card-price w-100">$ {{price}}</p>
        <a href="/post/{{post_id}}" class="anchor-buttons btn btn-primary w-100 m-auto">Post Details</a>
    </div>
</div>