<div id="flashMessage">
  {{#if messages.error}}
    <div id="alert" class="alert alert-danger">{{messages.error}}</div>
  {{else}}
    <div id="alert" class="alert alert-success">{{messages.success}}</div>
  {{/if}}
  <script>
    let flashMessageDiv = document.getElementById("alert");
    setflashMessageFadeOut(flashMessageDiv); function
    setflashMessageFadeOut(flashMessage) { setTimeout(() => { let currentOpacity
    = 1.0; let timer = setInterval(() => { if (currentOpacity < 0.1) {
    clearInterval(timer); flashMessage.remove(); } currentOpacity =
    currentOpacity - 0.05; flashMessage.style.opacity = currentOpacity; }, 50)
    }, 3200) }
  </script>
</div>