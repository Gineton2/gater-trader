              <script defer>
                document.getElementById("search-text").setAttribute('placeholder', '{{searchTerm}}');
              </script>
            {{/if}}
            {{#if categorySearch}}
              <script defer>
                  let innerTextNode = document.createTextNode('{{categorySearch}}');
                  let searchCondition = document.getElementById('search_concept selected');
                  searchCondition.innerText='';
                  searchCondition.appendChild(innerTextNode);
              </script>
            {{/if}}
            <button id="search-button" class="btn btn-default search-button rounded-end" type="submit" method="POST" action="/posts/search">
