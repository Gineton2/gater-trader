<header>
  <!-- Background image -->
  <div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100 mt-3">
      <div class="container">
        <div class="row justify-content-center ">
          <div class="col-xl-5 col-md-8 text-center ">
            <h3 class=" text-center mb-5 text-white bold">Registration Page</h3>

            <form class="needs-validation  bg-green  rounded-5 shadow-5-strong p-5 " action="/users/register"
              method="POST">
              <h2 class="text-uppercase text-center mb-5 bg-dark text-white">Register </h2>
              <!-- Email input -->

              <div class="form-outline mb-4 text-center bold text-white">

                <label class="form-label " for="username">Your Name</label>

                <input type="text" id="username" name="username" class="form-control border border-dark"
                  placeholder="Enter Full Name" minlength="2" pattern="^\D\w{2,}" required />
              </div>
              <div class="form-outline mb-4 text-center bold text-white">
                <label class="form-label" for="email">Email address</label>
                <input type="email" id="email" class="form-control border border-dark" placeholder="Enter Your Email" />

              </div>

              <!-- Password input -->
              <div class="form-outline mb-4 text-center bold text-white">
                <label class="form-label" for="password">Password</label>
                <input type="password" id="password" class="form-control border border-dark"
                  placeholder="Enter Your Password" />

              </div>
              <div class="form-outline mb-4 text-center bold text-white">
                <label class="form-label" for="password">Repeat Password</label>
                <input type="password" id="password" class="form-control border border-dark"
                  placeholder="Repeat Your Password" />

              </div>

              <!-- 2 column grid layout for inline styling -->
              <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                  <!-- Checkbox -->
                  <div class="form-check">

                    <div class="form-check d-flex justify-content-center mb-2 bold">
                      <input class="form-check-input me-2" type="checkbox" value="" id="checkbox" required />
                      <label class="form-check-label text-white" for="form2Example3g">
                        I agree all statements in <a href="#!" class="text-body text-decoration-none text-white"><u
                            class="text-decoration-none text-white">Terms of service</u></a>
                      </label>

                    </div>
                    <p class="text-center text-warning"> *All fields required.</p>

                    <div class="d-flex justify-content-center">
                      <button type="submit" class="btn btn-success btn-block text-center btn-lg ">Register
                      </button>
                    </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Background image -->
</header>