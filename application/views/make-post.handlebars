<div class="container-fluid  py-5 " style="position: relative;">
    <h2 class=" text-center mb-5 text-white">Make a Post</h2>
    <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3 ">

        <div class="col col-sm-3 px-5">
            
        </div>
        <div class="col col-lg-5 col-sm-2  m-5 ">
            <div class="card  shadow-sm ">
                <div class="card-body ">
                    <label for="formFileLg" class="form-label">Large file input example</label>
                    <input class="form-control form-control-lg" id="postFormFileData" type="file" />
                    <div class="clearfix py-2 my-2"> <span class="badge rounded-pill bg-success px-2 fw-bold">Accepted
                            File Types</span> <span class="px-1 fw-bold ">JPEG, MOV, PDF,WAV,MP4, MP3</span>
                    </div>
                    <form class="mx-1 mx-md-4">

                        <div class="form-outline mb-4 p-2">
                            <div class="fields-one text-center bold">
                                <label class="form-label" for="author">Author</label>
                            </div>
                            <input type="text" id="postName"
                                class="form-control form-control-lg border border-dark" placeholder="Enter Post Name" />

                        </div>

                        <div class="form-outline mb-4">
                            <div class="fields-two text-center bold">
                                <label class="form-label" for="form3">Title</label>
                            </div>
                            <input type="text" id="postTitle"
                                class="form-control form-control-lg border border-dark"
                                placeholder="Enter Post title" />

                        </div>

                        <div class="form-outline mb-4">
                            <div class="fields-three text-center bold">
                                <label class="form-label" for="postCategory">Category</label>
                            </div>
                            <div class="input-group mb-3">
                                <select class="custom-select w-100 p-3" id="postCategoryDropdown">
                                    <option selected>Choose...</option>
                                    <option value="1">Video</option>
                                    <option value="2">Photo</option>
                                    <option value="3">Digital Image</option>
                                    <option value="3">Course Material</option>
                                    <option value="3">Audio</option>
                                </select>
                            </div>

                        </div>
                        <div class="form-outline mb-4">
                            <div class="fields-two text-center bold">
                                <label class="form-label" for="postPrice">Price</label>
                            </div>
                            <input type="text" id="form3Example1cg"
                                class="form-control form-control-lg border border-dark"
                                placeholder="Enter Post Price" />

                        </div>

                        <div class="form-outline mb-4">
                            <div class="fields-four text-center bold">
                                <div class="md-form text-center ">
                                    <label for="description">
                                        <h4>Description</h4>
                                    </label>
                                    <textarea type="text" id="description" name="description" rows="4"
                                        class="form-control md-textarea"></textarea>

                                </div>
                            </div>


                        </div>

                        <div class="form-check d-flex justify-content-center mb-5 bold">
                            <input class="form-check-input me-2" type="checkbox" value="" id="termsofservice" />
                            <label class="form-check-label" for="termsofservice">
                                I agree all statements in <a href="#!" class="text-body"><u>Terms of service for
                                        Posting</u></a>
                            </label>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="button" class="btn btn-success btn-block text-center btn-lg ">Make
                                Post</button>
                        </div>



                    </form>


                </div>
            </div>
        </div>
      

    </div>

</div>
