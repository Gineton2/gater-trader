{{!-- This page is the message page. Must be implemented when user is logged in --}}




<div class="row justify-content-evenly mt-3 text-center">
    <h3 class=" text-center mb-5 text-white bold">Contact Seller</h3>

    <div class="col-xs-3 col-md-4 mb-5 mx-3">
        <div class="card mb-2 justisfy-content-center">
            <img src="/public/images/ebook2.jpeg" class="card-img-top" alt="postThumbnail">
            <div class="card-body bg-greenOne text-white">
                <h3 class="card-title text-center">Midnight Marauders</h3>
                <p class="card-text text-center">This is an E-book about the Midnight Marauders</p>
                <p class="card-text text-center">Seller: Riley </p>
                <p class="card-text text-center"><small>Price: $15.00</small></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-2 ">
        <header>
            <!-- Background image -->
            <div id="intro" class="bg-image shadow-2-strong text-ceneter">
                <div class="mask d-flex align-items-center h-100 mt-3 text-center">
                    <div class="container text-center">
                        <div class="row justify-content-center ">
                            <div class="col-xl-10 col-md- text-center col-sm-8">


                                <form class="needs-validation  bg-green  rounded-5 shadow-5-strong p-4 "
                                    action="/users/register" method="POST">
                                    <h2 class="text-uppercase text-center mb-3 bg-dark text-white"> Message Form
                                    </h2>
                                    <!-- Email input -->

                                    <div class="form-outline mb-3 text-center bold text-white">
                                        <h4> <label class="form-label " for="username">Your Name</label></h4>
                                        <input type="text" id="username" name="username"
                                            class="form-control border border-dark text-center " placeholder="Enter Full Name"
                                            minlength="2" pattern="^\D\w{2,}" required />
                                    </div>
                                    <div class="form-outline mb-3 text-center bold text-white">
                                        <h4><label class="form-label" for="email">Email address</label></h4>
                                        <input type="email" id="email" class="form-control border border-dark text-center "
                                            placeholder="Enter Your Email" />

                                    </div>

                                    <!-- Password input -->
                                    <div class="form-outline mb-3 text-center text-white">
                                        <h4><label class="form-label" for="message">Message</label></h4>

                                        <textarea class="form-control-lg px-5 w-100 border border-dark" id="message"
                                            rows="4"></textarea>

                                    </div>

                                    <!-- 2 column grid layout for inline styling -->
                                    <div class="row mb-3">
                                        <div class="col d-flex justify-content-center">
                                            <!-- Checkbox -->
                                            <div class="form-check text-center ">

                                                <div class="form-check d-flex justify-content-center mb-2 bold text-center px-5">
                                                    <p class="text-warning"> *All fields required.</p>

                                                </div>

                                                <div class="d-flex justify-content-center">
                                                    <a class="btn btn-success btn-lg mb-3"
                                                        onclick="document.getElementById('contact-form').submit();">Send Message</a>
                                                </div>
                                                <div class="status"></div>
                                            </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </header>


    </div>

</div>
</div>